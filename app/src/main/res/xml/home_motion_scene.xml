    <Transition
        motion:constraintSetEnd="@+id/state_1"
        motion:constraintSetStart="@+id/state_0"
        motion:duration="250">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/home_fragment_date"
            motion:touchAnchorSide="bottom" />
    </Transition>
    <Transition
        motion:constraintSetEnd="@+id/state_2"
        motion:constraintSetStart="@+id/state_1"
