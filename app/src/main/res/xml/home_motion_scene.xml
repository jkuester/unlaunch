            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="-3"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
